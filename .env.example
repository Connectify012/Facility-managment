# =============================================================================
# TAURUSAI API ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# Basic Application Settings
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
DB_NAME=Facility

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
MONGODB_URI=mongodb://localhost:27017/facility

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# Google Services
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key-here

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key-here

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
FROM_EMAIL=your-email@example.com
USE_AWS_SES=true

# SMTP Configuration (Alternative to AWS SES)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-smtp-user
EMAIL_SMTP_PASSWORD=your-smtp-password

# Additional SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# -----------------------------------------------------------------------------
# Redis Configuration (for caching and queues)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_USERNAME=default
REDIS_DB=0

# -----------------------------------------------------------------------------
# SMS Configuration (Twilio)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
TWILIO_SERVICE_SID=your-twilio-service-sid

# -----------------------------------------------------------------------------
# Payment Configuration (Stripe)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=10485760

# -----------------------------------------------------------------------------
# Chrome/Puppeteer Configuration
# -----------------------------------------------------------------------------
CHROME_PATH=/usr/bin/google-chrome
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# -----------------------------------------------------------------------------
# Course Video Processing
# -----------------------------------------------------------------------------
VIDEO_PROCESSING_WEBHOOK_SECRET=your-video-processing-webhook-secret

# =============================================================================
# ADDITIONAL OPTIONAL CONFIGURATIONS
# =============================================================================
YOUTUBE_API_KEY=your-youtube-api-key

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# CORS_ORIGIN=http://localhost:3000
# BCRYPT_ROUNDS=12
# SESSION_SECRET=your-session-secret

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# LOG_LEVEL=info
# LOG_FILE=app.log

# -----------------------------------------------------------------------------
